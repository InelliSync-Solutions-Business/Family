# OpenAI API Configuration
VITE_OPENAI_API_KEY=your_openai_api_key_here
VITE_BACKEND_API_URL=http://localhost:3001
OPENAI_MODEL=gpt-4o-mini # or your preferred model

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=your_pinecone_index_name_here

# Authentication (if using JWT)
JWT_SECRET=your_jwt_secret_here  # Generate a strong random string
JWT_EXPIRES_IN=7d  # Token expiration time

# Database Configuration (if using Supabase)
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Storage Configuration (if using cloud storage)
STORAGE_BUCKET_NAME=your_storage_bucket_name
STORAGE_REGION=your_storage_region

# Application Configuration
NODE_ENV=development
PORT=3000
VITE_API_URL=http://localhost:3000  # Frontend API URL

# Rate Limiting (optional)
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:5173  # Your frontend URL
